root = true

# Règles par défaut
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Pour les fichiers PHP
[*.php]
indent_size = 4

# Pour Markdown
[*.md]
trim_trailing_whitespace = false

# Pour Makefile
[Makefile]
indent_style = tab
