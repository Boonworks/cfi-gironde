RewriteEngine On
Options -Multiviews

RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\.cfi-gironde\.fr$ [NC]
RewriteRule ^(.*)$ https://cfi-gironde.fr/$1 [R=301,L]

# /index.html -> /
RewriteRule ^index\.html$ / [R=301,L]

# /contact.php -> /contact
RewriteCond %{THE_REQUEST} \s/+(?:contact\.php)[\s?] [NC]
RewriteRule ^contact\.php$ /contact [R=301,L]

# Réécriture interne : /contact -> contact.php
RewriteRule ^contact/?$ contact.php [L]

# URLs propres pour .html
RewriteCond %{THE_REQUEST} \s/+([^\s?]+)\.html[\s?] [NC]
RewriteCond %1 !^contact$ [NC]
RewriteRule ^ %1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/contact/?$ [NC]
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

